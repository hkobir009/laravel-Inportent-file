        toastr.error('GitHub Url Requred !');
    }else if (up.length == 0) {
        toastr.error('Upwork Url Requred !');
    }else if (free.length == 0) {
        toastr.error('Freelancer Url Requred !');
    }else if (fi.length == 0) {
        toastr.error('Fiverr Url Requred !');
