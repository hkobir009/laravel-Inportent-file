                    $('#socialAddModal').modal('hide');
                    toastr.success('Insert Success');
                    getSocialData();
                } else {
                    $('#socialAddModal').modal('hide');
                    toastr.error('Insert Failed');
                    getSocialData();
                }
            })
            .catch(function(error) {
                $('#socialAddModal').modal('hide');
                toastr.error('Insert Failed');
            });
    }

}
