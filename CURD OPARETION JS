        toastr.error('PPH Url Requred !');
    }else {
        $('#socialAddConfirmBtn').html("<div class='spinner-border spinner-border-sm' role='status'></div>") // Animation ......
        axios.post('/addSocialData', {
            facebook:face,
            twitter:twi,
            instagram:ig,
            youtube:yt,
            git:gi,
            upwork:up,
            freelancer:free,
            fiverr:fi,
            pph:pph_m
            })
            .then(function(response) {
                $('#socialAddConfirmBtn').html("SAVE")
